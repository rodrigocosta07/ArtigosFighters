			@Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@ViewBag.Email
		@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })

		<div class="col-md-10">
