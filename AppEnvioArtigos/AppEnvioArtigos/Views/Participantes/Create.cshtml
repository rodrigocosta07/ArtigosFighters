		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Cadastrar" class="btn btn-default" onclick="javascript:ConfirmarInscricao()" />
		</div>
	</div>
</div>
}


<div>
	@Html.ActionLink("Sair", "Login")
</div>




@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")

	<script type="text/javascript">
		function ConfirmarInscricao() {
			return alert("Inscrição Confirmada! \n");
		}
	</script>
}
