		@Html.LabelFor(model => model.RepitaSenha, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.PasswordFor(model => model.RepitaSenha, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.RepitaSenha, "", new { @class = "text-danger" })
		</div>
