@model AppEnvioArtigos.Controllers.ArtigoViewModel


@{
    ViewBag.Title = "Enviar Artigo";

}

<h2>Envie seu Artigo</h2>


@using (Html.BeginForm("Create", "Artigo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">

            <h4 class="col-md-2">Gênero:</h4>
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-required="genero"
                        id="Genero" name="Genero">
                    <option selected>Selecione...</option>
                    <option value="Tecnologia"> Tecnologia</option>
                    <option value="Ciencia"> Ciencia</option>
                    <option value="Medicina"> Medicina</option>
                    <option value="Historia"> Historia</option>
                </select>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResumoArtigo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ResumoArtigo, 10, 40, new { htmlAttributes = new { @class = "form-control", style = "width: 100%; max-width: 100%;" } })
                @Html.ValidationMessageFor(model => model.ResumoArtigo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2" for="file">Artigo em PDF:</label>
            <input style="font-size: 14px" id="Arquivo" name="Arquivo" type="file">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-outline-success" onclick="EnvioConfirmacao()"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", "Artigo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
    function EnvioConfirmacao() {
        return alert("Artigo Enviado com sucesso");
    }
    </script>
}

