@model AppEnvioArtigos.Models.Artigos

@{
    ViewBag.Title = "Detalhes do Artigo";
}


<h2>Detalhes do Artigo</h2>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            <p>Resumo</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResumoArtigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genero)
        </dd>

    </dl>

    <h3> Avaliações</h3> <h4>@ViewBag.media</h4>
    <table class="table table-dark">
        <tr>
            <th>
                <p>Notas</p>
            </th>
            <th>
                <p>Comentarios</p>
            </th>
        </tr>
        @foreach (var item in Model.Avaliacoes)
        {

            <tr>
                <td>
                    @item.NotaArtigo

                </td>
                <td>
                    @item.ComentarioRevisao
                </td>
            </tr>
        }
    </table>
</div>
<button class="btn btn-dark">
    @Html.ActionLink("Sair", "Index")
</button>
